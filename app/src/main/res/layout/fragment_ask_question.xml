<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.iiitdquora.AskQuestionFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/QuestionScroller">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/QuestionAskEditText"
                android:hint="@string/enter_your_question_here"
                android:scrollbars="vertical"
                android:maxLength="254" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/QuestionDescriptionScroller">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/QuestionDescEditText"
                android:hint="@string/enter_question_description_here"
                android:scrollbars="vertical"
                android:maxLength="254" />
        </ScrollView>

        <Button
            android:text="@string/ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AskButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>
