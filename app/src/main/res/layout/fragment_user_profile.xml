        </TableLayout>

        <Button
            android:text="Update Interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateInterestButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
